{
  "$schema": "https://design-tokens.org/schema.json",
  "$description": "Woof Design System — Design Tokens v2.0",

  "color": {
    "brand": {
      "primary": {
        "$value": "#EF4621",
        "$type": "color",
        "$description": "Woof Orange — primary brand, CTA buttons, active icons"
      },
      "primaryLight": {
        "$value": "#F5865A",
        "$type": "color",
        "$description": "Lighter orange for hover and tint states"
      },
      "primaryDark": {
        "$value": "#CC3615",
        "$type": "color",
        "$description": "Darker orange for pressed states"
      },
      "primarySubtle": {
        "$value": "#FEF0EC",
        "$type": "color",
        "$description": "Very light orange tint for backgrounds"
      },
      "gradient": {
        "$value": "linear-gradient(135deg, #EF4621, #F5A623)",
        "$type": "color",
        "$description": "Brand gradient: warm orange to golden amber, used for story rings and center nav button"
      }
    },
    "neutral": {
      "0":    { "$value": "#FFFFFF", "$type": "color" },
      "50":   { "$value": "#FAFAF8", "$type": "color", "$description": "Warm sandy cream app background" },
      "100":  { "$value": "#F5F5F3", "$type": "color", "$description": "Light warm cream section backgrounds" },
      "200":  { "$value": "#EBEBEB", "$type": "color" },
      "300":  { "$value": "#D1D1D1", "$type": "color" },
      "400":  { "$value": "#A8A8A8", "$type": "color" },
      "500":  { "$value": "#737373", "$type": "color" },
      "600":  { "$value": "#5C5C5C", "$type": "color" },
      "700":  { "$value": "#3D3D3D", "$type": "color" },
      "800":  { "$value": "#2E2E2E", "$type": "color" },
      "900":  { "$value": "#1A1A1A", "$type": "color" },
      "950":  { "$value": "#111111", "$type": "color" },
      "1000": { "$value": "#000000", "$type": "color" }
    },
    "semantic": {
      "like":       { "$value": "#FF4757", "$type": "color", "$description": "Heart icon and like count" },
      "likeBg":     { "$value": "#FFF0EF", "$type": "color", "$description": "Like bubble background" },
      "success":    { "$value": "#34C759", "$type": "color" },
      "warning":    { "$value": "#FF9500", "$type": "color" },
      "error":      { "$value": "#FF3B30", "$type": "color" },
      "info":       { "$value": "#007AFF", "$type": "color" }
    },
    "surface": {
      "primary":        { "$value": "#FFFFFF", "$type": "color" },
      "secondary":      { "$value": "#F5F5F3", "$type": "color" },
      "overlay":        { "$value": "rgba(0,0,0,0.4)", "$type": "color" },
      "nav":            { "$value": "#FFFFFF", "$type": "color", "$description": "Bottom nav bar background — flat white" },
      "navBlur":        { "$value": "rgba(255,255,255,0.95)", "$type": "color" },
      "storyRing":      { "$value": "linear-gradient(135deg, #EF4621, #F5A623)", "$type": "color", "$description": "Unviewed story ring — orange-amber gradient" },
      "storyRingSeen":  { "$value": "#D1D1D1", "$type": "color", "$description": "Viewed story border" }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": {
        "$value": "-apple-system, BlinkMacSystemFont, \"SF Pro Display\", \"SF Pro Text\", \"Inter\", \"Helvetica Neue\", Arial, sans-serif",
        "$type": "fontFamily"
      },
      "mono": {
        "$value": "\"SF Mono\", \"Fira Code\", Menlo, monospace",
        "$type": "fontFamily"
      }
    },
    "fontSize": {
      "display":      { "$value": "34px", "$type": "dimension" },
      "title1":       { "$value": "28px", "$type": "dimension" },
      "title2":       { "$value": "22px", "$type": "dimension" },
      "title3":       { "$value": "20px", "$type": "dimension" },
      "headline":     { "$value": "17px", "$type": "dimension" },
      "body":         { "$value": "16px", "$type": "dimension" },
      "callout":      { "$value": "15px", "$type": "dimension" },
      "subheadline":  { "$value": "15px", "$type": "dimension" },
      "footnote":     { "$value": "13px", "$type": "dimension" },
      "caption1":     { "$value": "12px", "$type": "dimension" },
      "caption2":     { "$value": "11px", "$type": "dimension" }
    },
    "lineHeight": {
      "display":    { "$value": "41px", "$type": "dimension" },
      "title1":     { "$value": "34px", "$type": "dimension" },
      "title2":     { "$value": "28px", "$type": "dimension" },
      "title3":     { "$value": "25px", "$type": "dimension" },
      "headline":   { "$value": "22px", "$type": "dimension" },
      "body":       { "$value": "22px", "$type": "dimension" },
      "callout":    { "$value": "20px", "$type": "dimension" },
      "footnote":   { "$value": "18px", "$type": "dimension" },
      "caption":    { "$value": "16px", "$type": "dimension" }
    },
    "fontWeight": {
      "regular":   { "$value": 400, "$type": "number" },
      "medium":    { "$value": 500, "$type": "number" },
      "semibold":  { "$value": 600, "$type": "number" },
      "bold":      { "$value": 700, "$type": "number" },
      "heavy":     { "$value": 800, "$type": "number" }
    }
  },

  "spacing": {
    "1":  { "$value": "4px",  "$type": "dimension" },
    "2":  { "$value": "8px",  "$type": "dimension" },
    "3":  { "$value": "12px", "$type": "dimension" },
    "4":  { "$value": "16px", "$type": "dimension" },
    "5":  { "$value": "20px", "$type": "dimension" },
    "6":  { "$value": "24px", "$type": "dimension" },
    "7":  { "$value": "28px", "$type": "dimension" },
    "8":  { "$value": "32px", "$type": "dimension" },
    "10": { "$value": "40px", "$type": "dimension" },
    "12": { "$value": "48px", "$type": "dimension" },
    "16": { "$value": "64px", "$type": "dimension" }
  },

  "borderRadius": {
    "xs":         { "$value": "4px",    "$type": "dimension" },
    "sm":         { "$value": "8px",    "$type": "dimension" },
    "md":         { "$value": "12px",   "$type": "dimension" },
    "lg":         { "$value": "16px",   "$type": "dimension" },
    "xl":         { "$value": "24px",   "$type": "dimension" },
    "2xl":        { "$value": "32px",   "$type": "dimension" },
    "full":       { "$value": "9999px", "$type": "dimension" },
    "storyThumb": { "$value": "18px",   "$type": "dimension", "$description": "Story thumbnail corner radius (squarish, from Dogger)" }
  },

  "shadow": {
    "xs":    { "$value": "0 1px 2px rgba(0,0,0,0.06)",          "$type": "shadow" },
    "sm":    { "$value": "0 2px 8px rgba(0,0,0,0.08)",          "$type": "shadow" },
    "md":    { "$value": "0 4px 16px rgba(0,0,0,0.10)",         "$type": "shadow" },
    "lg":    { "$value": "0 8px 32px rgba(0,0,0,0.14)",         "$type": "shadow" },
    "xl":    { "$value": "0 16px 48px rgba(0,0,0,0.20)",        "$type": "shadow" },
    "brand": { "$value": "0 4px 16px rgba(239,70,33,0.35)",    "$type": "shadow" },
    "nav":   { "$value": "0 -1px 0 rgba(0,0,0,0.06), 0 -4px 16px rgba(0,0,0,0.04)", "$type": "shadow", "$description": "Flat white nav bar top border shadow (Collaction style)" }
  },

  "animation": {
    "duration": {
      "instant": { "$value": "100ms", "$type": "duration" },
      "fast":    { "$value": "200ms", "$type": "duration" },
      "normal":  { "$value": "300ms", "$type": "duration" },
      "slow":    { "$value": "400ms", "$type": "duration" },
      "slower":  { "$value": "600ms", "$type": "duration" }
    },
    "easing": {
      "default": { "$value": "cubic-bezier(0.25, 0.1, 0.25, 1)",    "$type": "cubicBezier" },
      "in":      { "$value": "cubic-bezier(0.4, 0, 1, 1)",          "$type": "cubicBezier" },
      "out":     { "$value": "cubic-bezier(0, 0, 0.2, 1)",          "$type": "cubicBezier" },
      "bounce":  { "$value": "cubic-bezier(0.34, 1.56, 0.64, 1)",   "$type": "cubicBezier" },
      "spring":  { "$value": "cubic-bezier(0.175, 0.885, 0.32, 1.275)", "$type": "cubicBezier" }
    }
  },

  "component": {
    "avatar": {
      "xs":  { "$value": "28px", "$type": "dimension" },
      "sm":  { "$value": "36px", "$type": "dimension" },
      "md":  { "$value": "44px", "$type": "dimension" },
      "lg":  { "$value": "56px", "$type": "dimension" },
      "xl":  { "$value": "80px", "$type": "dimension" },
      "2xl": { "$value": "100px","$type": "dimension" }
    },
    "button": {
      "heightSm":    { "$value": "36px", "$type": "dimension" },
      "heightMd":    { "$value": "44px", "$type": "dimension" },
      "heightLg":    { "$value": "52px", "$type": "dimension" },
      "paddingX":    { "$value": "20px", "$type": "dimension" },
      "borderRadius":{ "$value": "9999px", "$type": "dimension" }
    },
    "navigation": {
      "height":        { "$value": "64px", "$type": "dimension" },
      "safeArea":      { "$value": "34px", "$type": "dimension" },
      "centerSize":    { "$value": "56px", "$type": "dimension" },
      "centerRadius":  { "$value": "18px", "$type": "dimension", "$description": "Squarish center nav button (18px radius)" },
      "iconSize":      { "$value": "24px", "$type": "dimension" },
      "iconStroke":    { "$value": 1.8, "$type": "number", "$description": "SVG stroke-width for thin-stroke outline icons" }
    },
    "story": {
      "size":          { "$value": "56px", "$type": "dimension" },
      "thumbRadius":   { "$value": "18px", "$type": "dimension", "$description": "Squarish rounded rectangle thumbnail (from Dogger)" },
      "ringWidth":     { "$value": "2px",  "$type": "dimension" },
      "ringGap":       { "$value": "2px",  "$type": "dimension" }
    },
    "profile": {
      "avatarOverlap": { "$value": "40px", "$type": "dimension", "$description": "How far the avatar extends below the hero image top edge (Collaction style)" },
      "actionBtnSize": { "$value": "40px", "$type": "dimension", "$description": "Circular action buttons row size" }
    },
    "layout": {
      "screenMargin":  { "$value": "16px", "$type": "dimension" },
      "cardPadding":   { "$value": "16px", "$type": "dimension" },
      "touchTarget":   { "$value": "44px", "$type": "dimension" }
    }
  }
}
